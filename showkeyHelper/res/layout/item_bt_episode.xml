<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:paddingLeft="30dp"
    android:background="#aaaaaa"
    xmlns:android="http://schemas.android.com/apk/res/android">
	<LinearLayout android:layout_width="fill_parent"
	    android:layout_height="85dp" 
	    android:gravity="center_vertical"
	    android:paddingRight="10dp"
	    android:background="@drawable/bg_xunlei_content_setting_selector"
	    android:id="@+id/layout_item"
	    android:orientation="horizontal">
	    <ImageView android:layout_width="90dp"
	        android:layout_height="60dp"
	        android:id="@+id/movie_type"
	        android:src="@drawable/icon_movie"/>
	    <LinearLayout android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:layout_marginLeft="10dp"
	        android:gravity="center_vertical"
	        android:layout_weight="1"
	        android:orientation="vertical">
	        <TextView android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:singleLine="true"
	            android:textColor="@color/common_list_content_textcolor"
	            android:textSize="24dp"
	            android:ellipsize="marquee"
	            android:marqueeRepeatLimit="marquee_forever"
	            android:scrollHorizontally="true"
	            android:id="@+id/movie_name"/>
	        <TextView android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="8dp"
	            android:singleLine="true"
	            android:textColor="@color/common_list_content_textcolor"
	            android:textSize="16dp"
	            android:id="@+id/movie_size"/>
	    </LinearLayout>
	    <ImageView android:layout_width="25dp"
	        android:layout_height="25dp"
	        android:layout_marginLeft="30dp"
	        android:layout_marginRight="30dp"
	        android:id="@+id/movie_statue_icon"
	        android:visibility="invisible"
	        android:src="@drawable/icon_continue"/>
	</LinearLayout>
	<ImageView android:layout_width="fill_parent"
	    android:layout_height="2px"
	    android:id="@+id/divider_line"
	    android:layout_below="@id/layout_item"
	    android:background="@drawable/line"/>
</RelativeLayout>