<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

<item android:id="@android:id/background" >
	<!-- <nine-patch android:src="@drawable/bg_progress"/> -->    
    <shape>
        <corners android:radius="0dip" />
        <gradient
                android:startColor="#3e454d"
                android:centerColor="#3e454d"
                android:centerY="0.75"
                android:endColor="#3e454d"
                android:angle="270"
        />
    </shape>
</item>

<item android:id="@android:id/secondaryProgress" >
   <!--  <clip>  
		 
		 <nine-patch android:src="@drawable/bg_progress_red">
			
		 </nine-patch>  

    </clip>  -->
    
    <clip>
        <shape>
            <corners android:radius="5dip" />
            <gradient
                    android:startColor="#ff0000"
                    android:centerColor="#ff0000"
                    android:centerY="0.75"
                    android:endColor="#ff0000"
                    android:angle="270"
            />
        </shape>
    </clip>
</item>
<item android:id="@android:id/progress">
    <!-- <clip>  
		 
		 <nine-patch android:src="@drawable/bg_progress_green">
			
		 </nine-patch>  

    </clip>  -->
    <clip>
        <shape>
            <corners android:radius="0dip" />
            <gradient
                android:startColor="#00aeef"
                android:endColor="#00aeef"
                android:angle="270" />
        </shape>
    </clip>
</item>

</layer-list>