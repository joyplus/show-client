<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="MyAppTheme" parent="android:Theme.NoTitleBar.Fullscreen">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowBackground">@drawable/bg_app</item>
    </style>
    <style name="ProgressBar_My" parent="@android:style/Widget.ProgressBar.Horizontal">
	    <item name="android:maxHeight">50dip</item>
	    <item name="android:minHeight">10dip</item>
	    <item name="android:indeterminateOnly">false</item>
	    <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
	    <item name="android:progressDrawable">@drawable/drawable_progressbar</item>
    </style>
    <style name="ProgressBar_jiasu" parent="@android:style/Widget.ProgressBar.Horizontal">
	    <item name="android:maxHeight">50dip</item>
	    <item name="android:minHeight">10dip</item>
	    <item name="android:indeterminateOnly">false</item>
	    <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
	    <item name="android:progressDrawable">@drawable/jiasu_drawable_progressbar</item>
    </style>
    <style name="FullHeightDialog" parent="android:style/Theme.Dialog">
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowBackground">@android:color/transparent</item>
	</style>
	
    <style name="Transparent">  
    <item name="android:windowBackground">@android:color/transparent</item>  
    <item name="android:windowNoTitle">true</item>  
    <item name="android:windowFullscreen">true</item>
    <item name="android:windowIsTranslucent">true</item>     
    <item name="android:windowAnimationStyle">@style/dilogAnimation</item>  
  </style>
  
    <style name="dilogAnimation" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/alpha_appear_dialog</item>
        <item name="android:windowExitAnimation">@anim/alpha_disappear_dialog</item>
    </style>
    
</resources>